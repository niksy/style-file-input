{
  "name": "style-file-input",
  "version": "2.1.0",
  "description": "Style file input element.",
  "license": "MIT",
  "author": "Ivan NikoliÄ‡ <niksy5@gmail.com> (http://ivannikolic.com)",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "style": "./dist/index.css",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "style": "dist/index.css",
  "directories": {
    "test": "test"
  },
  "files": [
    "dist/",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "rolldown --config rolldown.config.js",
    "lint": "eslint '{index,lib/**/*,test/**/*}.js' && stylelint 'index.css'",
    "lint:types": "tsc",
    "prepare": "if [[ -x \"$(command -v husky)\" ]]; then husky; fi",
    "prepublishOnly": "npm run build",
    "postpublish": "GITHUB_TOKEN=$GITHUB_RELEASE_TOKEN github-release-from-changelog",
    "prerelease": "npm run lint && npm run lint:types && npm run build",
    "release": "np --no-release-draft",
    "test": "npm run test:automated",
    "test:automated": "karma start",
    "test:automated:watch": "npm run test:automated -- --auto-watch --no-single-run",
    "test:manual": "vite --config ./test/manual/vite.config.js",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "dependencies": {
    "classlist-multiple-values": "^2.0.0"
  },
  "devDependencies": {
    "@types/karma": "^6.3.9",
    "@types/karma-browserstack-launcher": "^1.6.5",
    "@types/karma-coverage": "^2.0.3",
    "@types/karma-fixture": "^0.2.8",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.1",
    "@types/simulant": "^0.2.2",
    "changelog-verify": "^1.1.2",
    "eslint": "^9.39.1",
    "eslint-config-nitpick": "^14.2.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "github-release-from-changelog": "^2.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "karma": "^6.4.4",
    "karma-browserstack-launcher": "^1.6.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-fixture": "^0.2.6",
    "karma-html2js-preprocessor": "^1.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-rolldown-preprocessor": "^1.0.1",
    "karma-sourcemap-loader": "^0.3.8",
    "lint-staged": "^15.5.2",
    "mocha": "^10.8.2",
    "np": "^10.2.0",
    "prettier": "^3.6.2",
    "rolldown": "^1.0.0-beta.50",
    "rolldown-plugin-dts": "^0.17.7",
    "rollup-plugin-istanbul": "^5.0.0",
    "simulant": "^0.2.2",
    "stylelint": "^16.25.0",
    "stylelint-config-nitpick": "^11.1.0",
    "stylelint-prettier": "^5.0.3",
    "suitcss-components-test": "^1.0.0",
    "typescript": "^5.9.3",
    "unenv": "^2.0.0-rc.24",
    "version-changelog": "^3.1.1",
    "vite": "npm:rolldown-vite@^7.2.5"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "file",
    "fileinput",
    "input",
    "style"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niksy/style-file-input.git"
  },
  "bugs": {
    "url": "https://github.com/niksy/style-file-input/issues"
  },
  "homepage": "https://github.com/niksy/style-file-input#readme"
}
